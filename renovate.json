{
  "extends": [
    "config:recommended"
  ],
  "automerge": true,
  "automergeType": "branch",
  "automergeComment": "AutoMerged dependency",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true
    }
  ]
}
